@model Domain.Entities.Game

<div class="well">
    @if (Model.ImageData != null)
    {
        <div class="pull-left" style="margin-right: 10px">
            <img class="img-thumbnail" width="75" height="75"
                 src="@Url.Action("GetImage", "Game",
                new { Model.Id })" />
        </div>
    }

    
    <h3><strong>@Model.Title</strong></h3>
    <h4><strong>@Model.Developer</strong></h4>
    <h3><span class="pull-right label label-primary">@Model.Price.ToString("# руб")</span></h3>
    
    @using (Html.BeginForm("AddItemToCart", "Cart", new { gameId = Model.Id }))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.Id)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="Добавить в корзину" />
        </div>
    }
    <span class="lead">@Model.Description</span>
</div>